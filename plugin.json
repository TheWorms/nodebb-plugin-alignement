{
	"id": "nodebb-plugin-alignement",
	"name": "NodeBB Alignement",
	"description": "Alightment options to basic composer. Align text left, right, center. Float images left/right.",
	"url": "https://github.com/TheWorms/nodebb-plugin-alignement",
	"library": "./library.js",


	"hooks": [
		{
			"hook": "filter:composer.formatting",
			"method": "composerFormatting"
		},
		{
			"hook": "filter:parse.post",
			"method": "parsePost",
			"priority": 10
		},
		{
			"hook": "filter:parse.raw",
			"method": "parseRaw",
			"priority": 10
		}
	],
	"staticDirs": {
		"static": "./static",
		"img": "./static/img"
	},
	"less": [
		"static/style.less"
	],
	"scripts": [
		"static/main.js"
	]
}